---
import '../styles/global.css';

const pageTitle: string = "关于我"

const identity = {
    firstName: "莎拉",
    country: "加拿大",
    occupation: "技术撰稿人",
    hobbies: ["摄影", "观鸟", "棒球"],
}

const skills = ["HTML", "CSS", "JavaScript", "React", "Astro", "Writing Docs"]

const skillColor = "navy"
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro</title>
        <style define:vars={{skillColor}}>
            h1 {
              color: purple;
              font-size: 4rem;
            }
            .skill {
                color: var(--skillColor);
                font-weight: bold;
            }
        </style>
	</head>
	<body>
        <a href="/">首页</a>
        <a href="/about/">关于</a>
		<a href="/blog/">博客</a>

        <h1>关于我</h1>
        <li>我的名字是{identity.firstName}</li>
        <li>我住在{identity.country}，我的职业是{identity.occupation}</li>
        {
            identity.hobbies.length >= 2 && <li>我的两个习惯：{identity.hobbies[0]}和{identity.hobbies[1]}</li>   
        }
        <p>我的技能是：</p>
        <ul>{skills.map(skill => <li class="skill">{skill}</li>)}</ul>
	</body>
</html>
